<MyGrid>:
    btn:btn
    btn1: btn1
    btn2: btn2
    tekst:btn.text

    Touch:
        id: okno
        canvas:
            Color: 
                rgba: root.color
            
    Button:
        id: btn
        size: (100,50)
        text:"Clear"
        on_press: root.pressed(canvass = okno.canvas)
        on_release: root.lifted()
    Button:
        id: btn1
        pos:(100,0)
        size:(50,50)
        text:"+"
        on_press: root.increase(canvass = okno)
    Button:
        id: btn2
        text:"-"
        size:(50,50)
        pos: (150, 0)
        on_press: root.decrease(canvass = okno)

                